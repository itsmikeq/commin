<ul id="slide-out" class="side-nav">
  <li>
    <div class="userView">
      <img class="background" src="https://placehold.it/400x300/ffffff/000000">
      <img class="circle" src="https://placehold.it/200x200/fff?text=User+Face">
      <span class="white-text name"><%= current_user.try(:username) %></span>
    </div>
  </li>
  <li class=" valign">
    <%= link_to my_friends_path, class: "#{active(my_friends_path)}" do %>
        <i class="fa fa-users">
        </i>
        Friends
    <% end %>
  </li>
  <li class=" valign">
    <%= link_to posts_path, class: "#{active(posts_path)}" do %>
        <i class="fa fa-quote-right">
        </i>
        Posts
    <% end %>
  </li>
  <li class=" valign">
    <%= link_to my_direct_messages_path, class: "#{active(my_direct_messages_path)}" do %>
        <i class="fa fa-long-arrow-right">
        </i>
        Direct Messages
    <% end %>
  </li>
  <li class=" valign">
    <%= link_to '#', class: "" do %>
        <i class="material-icons left">trending_up</i>
        Trending
    <% end %>
  </li>
  <li class=" valign">
    <% if @current_user %>
        <%= link_to destroy_user_session_path, class: "", method: :delete do %>
            <i class="fa fa-sign-out"></i>
            Sign Out
        <% end %>
    <% else %>
        <%= link_to new_user_session_path, class: "" do %>
            <i class="fa fa-sign-in"></i>
            Sign In
        <% end %>
    <% end %>
  </li>
</ul>
<div class="navbar-fixed" style="margin-top: -20px;">
  <nav>
    <div class="nav-wrapper search">
      <ul class="right center-align">
        <li>
            <%= render('shared/search_component') %>
        </li>
      </ul>
    </div>
  </nav>
  <div class="hide-on-small-only" style="margin-top:20px">
    <div class="navbar-fixed-top">
      <a href="#" data-activates="slide-out" class="button-collapse"><i class="medium material-icons">menu</i></a>
    </div>
  </div>
  <div class="hide-on-med-and-up" style="margin-top:20px">
    <div class="navbar-fixed-top">
      <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
  </div>
</div>
<script>
  $('.collapsible').collapsible({});
  $('.button-collapse').sideNav({
        menuWidth: 240, // Default is 240
        edge: 'left', // Choose the horizontal origin
        closeOnClick: true // Closes side-nav on <a> clicks, useful for Angular/Meteor
      }
  );

</script>
